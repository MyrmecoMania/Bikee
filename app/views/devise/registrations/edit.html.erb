<div class="mb-4">
  <h2>Paramètres du compte</h2>
</div>

<div class="container col-6">
  <div class="mt-2 mb-2">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <h3>Modifier mes informations :</h3>

        <%= f.input :email,
                    required: true,
                    label: 'Email',
                    autofocus: true %>
        <%= f.input :firstname,
                    required: false,
                    label: 'Prénom',
                    autofocus: true %>
        <%= f.input :lastname,
                    required: false,
                    label: 'Nom',
                    autofocus: true %>
        <%= f.input :phone_number,
                    as: :string,
                    required: true,
                    label: 'Numéro de télephone',
                    autofocus: true %>
        <%= f.input :photo, label:"Photo de profil", as: :file, input_html: { multiple: false } %>


        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>En attente de confirmation pour: <%= resource.unconfirmed_email %></p>
        <% end %>

        <h3 class="mt-4">Modifier mon mot de passe :</h3>

        <%= f.input :password,
                    hint: "Laissez le champs vide si vous ne souhaitez pas changer votre mot de passe",
                    required: false,
                    label: 'Nouveau mot de passe',
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: false,
                    label: 'Confirmation du nouveau mot de passe',
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password,
                    hint: "Votre mot de passe actuel est nécessaire pour confirmer le changement",
                    required: true,
                    label: 'Mot de passe actuel',
                    input_html: { autocomplete: "current-password" } %>
      </div>

      <div class="form-actions btn btn-confirm">
        <%= f.button :submit, "Sauvegarder les changements" %>
      </div>
    <% end %>
  </div>

  <div class="mb-4">
    <h3>Supprimer mon compte</h3>
    <p><%= link_to "Supprimer votre compte ici", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    <%= link_to "Retour", :back %>
  </div>
</div>
