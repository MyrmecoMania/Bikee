<div class="modal fade" id="new_movie_modal" tabindex="-1" role="dialog" style="z-index: 3000">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
    <div class="p-3">
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
      </button>
      <h2 class=" m-0 text-center">Ajouter un vélo</h2>
    </div>
      <div class="p-2 bike-form">
        <%= simple_form_for(@new_bike) do |f| %>
          <div class="modal-body">
            <%= f.input :category, collection: ['gravel', 'éléctrique','route', 'VTT', 'enfant', 'bmx', 'ville', 'autre'], label: "Catégorie", placeholder:"gravel" %>
            <%= f.input :brand, label:"Marque", placeholder: "Orbea"%>
            <%= f.input :address, label: "Adresse",
                        input_html: {data: {address_autocomplete_target: "address"}, class: "input-geocode d-none"},
                        wrapper_html: {data: {controller: "address-autocomplete",
                        address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
            %>
            <%= f.input :status, label: "Disponible" %>
            <%= f.input :price_per_day, label:"Prix journalier", placeholder:"€" %>
            <%= f.input :photos, label:"Photo(s)", as: :file, input_html: { multiple: true } %>
          </div>
          <div class="modal-footer">
            <%= f.submit "Ajouter un vélo", class: "btn btn-primary large button"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
